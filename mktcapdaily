from datetime import date, timedelta
import numpy as np
import pandas as pd
import requests
import gspread
from df2gspread import df2gspread as d2g
from oauth2client.service_account import ServiceAccountCredentials
import nasdaqdatalink

# Set the API key for accessing Sharadar data
nasdaqdatalink.ApiConfig.api_key = 'YOUR_API_KEY'

# Define holiday list
holiday_list = [
    date(2023, 6, 19), date(2023, 7, 4), date(2023, 9, 4), date(2023, 11, 23), 
    date(2023, 12, 25), date(2024, 1, 1), date(2024, 1, 15), date(2024, 2, 19), 
    date(2024, 3, 9), date(2024, 5, 27), date(2024, 7, 4), date(2024, 6, 19), 
    date(2024, 9, 2), date(2024, 11, 28), date(2024, 12, 25)
]

# Function to get the previous weekday's date
def get_previous_weekday():
    today = date.today()
    delta = timedelta(days=1)
    while today.weekday() >= 5 or today in holiday_list:
        today -= delta
    return today

# Get the adjusted date
adjusted_date = get_previous_weekday()
# Print the adjusted date
print('Adjusted date:', adjusted_date)

# Fetch data from Sharadar for the adjusted date
data = nasdaqdatalink.get_table('SHARADAR/DAILY', date={adjusted_date}, paginate=True)

# Convert data to a DataFrame
df = pd.DataFrame(data)

# Sort the DataFrame by ticker
df.sort_values(by='ticker', inplace=True)

# Keep only required columns
df = df[['ticker', 'marketcap']]

# Print the DataFrame
print(df)

# Save DataFrame to a CSV file
df.to_csv('daily_marketcap.csv', index=False)

# Convert DataFrame to list
df_list = df.values.tolist()

# Upload data to Google Sheets
scope = ['https://spreadsheets.google.com/feeds']
creds = ServiceAccountCredentials.from_json_keyfile_name('Tracker/google-sheets-secrets.json', scope)
gc = gspread.authorize(creds)

# Read CSV file
read_file = pd.read_csv('daily_marketcap.csv')

# Upload to Google Sheets
sheet_key = 'YOUR_SHEET_ID'
d2g.upload(read_file, sheet_key, 'mktcap', credentials=creds, row_names=False)

# Sort the data in Google Sheets
worksheet = gc.open_by_key(sheet_key).worksheet('mktcap')
worksheet.sort((1,'des'), range='A2:B8000')

print('Daily marketcap uploaded to Google Sheets')
